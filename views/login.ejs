<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Party Games</title>
        <link rel="stylesheet" href="default.css" />
        <link rel="stylesheet" href="login.css" />
    </head>
    <body>
        <div class="container">
            <nav class="">
                <div class="logoDiv">
                    <img src="imgs/logo.png" />
                </div>
                <a class="option" href="/">
                    <div class="image">
                        <img src="imgs/people-color.png" />
                    </div>
                    <p>Lobbies</p>
                </a>
                <a class="option" href="/createLobby">
                    <div class="image">
                        <img src="imgs/game-color.png" />
                    </div>
                    <p>Games</p>
                </a>
                <a class="option" href="/about">
                    <div class="image">
                        <img src="imgs/info-color.png" />
                    </div>
                    <p>About</p>
                </a>

                <!--? Profile / Login button -->

                <a class="option profile" href="/login">
                    <div class="image">
                        <img src="imgs/person-color.png" />
                    </div>

                    <p>Login</p>
                </a>
            </nav>
            <div class="content">
                <div class="login">
                    <h2>Login</h2>
                    <input type="text" placeholder="username..." />
                    <span>
                        <input type="password" placeholder="password..." />
                        <p>
                            You doesn't have an account? Click
                            <a href="/signup">here</a>
                        </p>
                    </span>
                    <button>Log in</button>
                </div>
            </div>
        </div>
        <script src="default.js"></script>
    </body>
</html>
